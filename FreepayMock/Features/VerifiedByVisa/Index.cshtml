@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<FreepayMock.Features.VerifiedByVisa.Index.Model>

<style>
    body {
        font-family: "Arial";
        font-size: 12px;
    }

    .boxed {
        border: 1px solid black;
        padding: 10px;
    }

    td {
        font-family: "Arial";
        font-size: 12px;
    }

    .note {
        font-size: 10px;
    }
</style>

<div class="boxed">
    <p>
        <strong>Bekr&aelig;ftelse med engangskode</strong><br />
        <br />
        En engangskode er blevet sendt til din mobiltelefon.<br />
        Du b&oslash;r modtage den indenfor to minutter. Indtast koden nedenfor og <br />
        tryk 'Bekr&aelig;ft'<br />
